<Dialog Resizable="n" Title="Please consider a donation">
<BorderPanel Border="8" Spacing="4">
  <central>
    <Label id="message" DefaultWidth="350"/>
  </central>  
  <south>
  	  	<ButtonPanel>
	  		<yes><Button id="yes" Label="Donate" OnAction="actionDonate"/></yes>
	  		<no><Button id="no" Label="Maybe later" OnAction="actionLater"/></no>
	  		<cancel><Button id="cancel" Label="Cancel" OnAction="actionCancel"/></cancel>
	  	</ButtonPanel>	  	
  </south>
</BorderPanel>
</Dialog>