<Page Title="Watch list">
  <BorderPanel Spacing="4">
  		<north>
  			<Label Text="When somebody on this list logs on or logs off, you are informed. You use this list to keep track of your friends."/>
  		</north>
  		<central>
  			<Table id="watchList" OnSelect="selectWatchList" Width="200" Rows="10">
  				<column name="Nickname" type="string"/>
  				<column name="User name" type="string"/>
  				<column name="Host name" type="string"/>
  			</Table>
  		</central>
  		<south>
  			<VerticalPanel Spacing="4">
	  			<HorizontalPanel Spacing="4">
	  				<Button Label="Add" OnAction="actionAdd"/>
	  				<Button id="delete" Label="Remove" OnAction="actionRemove" Enabled="n"/>
	  			</HorizontalPanel>
	  			<Label Small="y" Text="You can also add entries to this list using the /watch command."/>
	  		</VerticalPanel>
  		</south>
  	</BorderPanel>
</Page>