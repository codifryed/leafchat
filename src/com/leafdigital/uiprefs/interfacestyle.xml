<Page Title="Interface style" OnSet="onSet">
  <VerticalPanel Spacing="8">

  		<Label Text="leafChat provides three different styles of interface which control how windows are arranged. You can use whichever one you prefer."/>

  		<HorizontalPanel Spacing="24">

	 		  <VerticalPanel Spacing="4">
			  	<RadioButton Label="Classic" Group="interface" id="classic" OnAction="actionInterface"/>
			    <Pic Property="uiprefs/exampleClassic"/>
			    <Label Small="y" DefaultWidth="100" Text="Main window containing smaller windows"/>
	 		  </VerticalPanel>

	 		  <VerticalPanel Spacing="4">
			  	<RadioButton Label="Tabs" Group="interface" id="tabs" OnAction="actionInterface"/>
			    <Pic Property="uiprefs/exampleTabs"/>
			    <Label Small="y" DefaultWidth="100" Text="Main window containing tabs"/>
	 		  </VerticalPanel>

  		</HorizontalPanel>

  		<HorizontalPanel Spacing="24">

  		  <VerticalPanel Spacing="4">
			  	<RadioButton Label="Separate" Group="interface" id="separate" OnAction="actionInterface"/>
			  	<HorizontalPanel Spacing="4">
				    <Pic Property="uiprefs/exampleSeparate"/>
				    <BorderPanel>
			    	  <south>
						    <Label Small="y" DefaultWidth="120" Text="Separate small windows and a toolbar, all floating on your desktop"/>
						  </south>
						</BorderPanel>
				  </HorizontalPanel>
  		  </VerticalPanel>

  		</HorizontalPanel>

			<CheckBox id="trayMinimise" Label="Minimise to tray" OnChange="changeTrayMinimise"/>

  	</VerticalPanel>
</Page>